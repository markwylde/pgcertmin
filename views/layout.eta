<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= it.title %> - PGSecMin</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/lucide.js"></script>
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="logo">
                <i data-lucide="shield-check"></i>
                <span>PGSecMin</span>
            </div>
            <nav>
                <a href="/" class="<%= it.path === '/' ? 'active' : '' %>">
                    <i data-lucide="layout-dashboard"></i> Dashboard
                </a>
                <a href="/databases" class="<%= it.path === '/databases' ? 'active' : '' %>">
                    <i data-lucide="database"></i> Databases
                </a>
                <a href="/users" class="<%= it.path === '/users' ? 'active' : '' %>">
                    <i data-lucide="users"></i> Users
                </a>
                <a href="/certs" class="<%= it.path === '/certs' ? 'active' : '' %>">
                    <i data-lucide="file-key"></i> Certificates
                </a>
                <a href="/backups" class="<%= it.path === '/backups' ? 'active' : '' %>">
                    <i data-lucide="archive"></i> Backups
                </a>
                <a href="/status" class="<%= it.path === '/status' ? 'active' : '' %>">
                    <i data-lucide="activity"></i> Status
                </a>
            </nav>
        </aside>
        <main class="main-content">
            <header class="top-bar">
                <h1><%= it.title %></h1>
                <div class="header-right">
                    <div class="user-info">
                        <i data-lucide="database"></i>
                        <span><%= it.dbUser %>@<%= it.dbHost %></span>
                    </div>
                    <div class="user-info">
                        <i data-lucide="key"></i>
                        <span><%= it.certName %></span>
                    </div>
                    <form action="/logout" method="POST" style="margin: 0;">
                        <button type="submit" class="btn-logout" title="Logout">
                            <i data-lucide="log-out"></i>
                        </button>
                    </form>
                </div>
            </header>
            <div class="content-area">
                <%~ it.body %>
            </div>
        </main>
    </div>
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
